# Database Configuration
POSTGRES_CONNECTION=Host=postgres;Database=enova_cip;Username=postgres;Password=postgres

# Search Engine
ELASTICSEARCH_URI=http://elasticsearch:9200

# Object Storage
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Email Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# AI Service
AI_BASE_URL=http://ai:8000
AI_OCR_PROVIDER=local
AI_EXTRACT_PROVIDER=local

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# OpenAI (Optional)
OPENAI_API_KEY=

# Azure Document Intelligence (Optional)
AZURE_DOCINTEL_ENDPOINT=
AZURE_DOCINTEL_KEY=

# JWT Configuration
JWT_ISSUER=enova.local
JWT_AUDIENCE=enova.local
JWT_KEY=SuperSecretDevKey_ChangeMe_In_Production

# Seed Data Configuration
# Options: none, example
SEED_MODE=example

# Redis Configuration
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=Information

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Hangfire Configuration
HANGFIRE_DASHBOARD_ENABLED=true
HANGFIRE_DASHBOARD_PATH=/hangfire

# Frontend Configuration
API_BASE_URL=http://localhost:5000
AI_BASE_URL=http://localhost:8000
MINIO_BASE_URL=http://localhost:9000

# Development Settings
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_REQUEST_LOGGING=true

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.tiff,.bmp

# AI Model Configuration
AI_MODEL_CACHE_SIZE=1GB
AI_BATCH_SIZE=10
AI_TIMEOUT_SECONDS=120

# Performance Settings
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=60
MAX_POOL_SIZE=20

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENABLE_AUDIT_LOGGING=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7